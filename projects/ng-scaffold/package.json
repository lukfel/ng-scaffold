{
  "name": "@lukfel/ng-scaffold",
  "version": "21.0.1",
  "description": "This Angular library provides a basic UI scaffold and services for modern web and mobile apps",
  "license": "MIT",
  "author": {
    "name": "Lukas Felbinger",
    "url": "https://www.lukasfelbinger.at"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lukfel/ng-scaffold"
  },
  "scripts": {
    "build": "tsc -p tsconfig.schematics.json",
    "postbuild": "copyfiles schematics/*/schema.json schematics/*/files/** schematics/collection.json ../../dist/ng-scaffold/"
  },
  "peerDependencies": {
    "@angular/common": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/material": "^21.0.0",
    "@angular/animations": "^21.0.0"
  },
  "devDependencies": {
    "copyfiles": "file:../../node_modules/copyfiles",
    "typescript": "file:../../node_modules/typescript"
  },
  "exports": {
    "./styles": {
      "sass": "./styles/style.scss"
    }
  },
  "schematics": "./schematics/collection.json",
  "ng-add": {
    "save": true
  },
  "sideEffects": false
}
